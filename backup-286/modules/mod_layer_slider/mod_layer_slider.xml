  <description/>
  <media destination="offlajn">
    <filename>jquery.noconflict.js</filename>
    <filename>index.html</filename>
  </media>
  <config>
    <fields name="params">
      <fieldset name="basic">
        <field name="slider" type="sql" default="0" label="Select a slider" query="SELECT id AS value, CONCAT(id,' - ',name) AS slider FROM #__layerslider WHERE flag_deleted=0"/>
      </fieldset>
      <fieldset name="advanced">
        <field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
      </fieldset>
    </fields>
  </config>
