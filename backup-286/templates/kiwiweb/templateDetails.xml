<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.2" type="template" method="upgrade">
        <name>kiwiweb</name>
        <creationDate>2015-10-15</creationDate>
        <author>nextgerp</author>
        <copyright>Copyright Â© 2015 nextgerp</copyright>
        <authorUrl>http://nextgerp.com</authorUrl>
        <version>1.0.0</version>
        <description><![CDATA[
		<h1>Kiwi Web Template</h1>
		<p>Created by <a href="http://nextgerp.com" target="_blank">nextgerp.com</a>.</p>
	]]>
        </description>
        <positions>
                <position>top-left-menu</position>
                <position>top-right-menu</position>
                <position>phone-menu</position>
                <position>main-menu</position>
                <position>home-slider</position>
                <position>main-login</position>
                <position>section</position>
                <position>left</position>
                <position>right-1</position>
                <position>right-2</position>
                <position>main-top</position>
                <position>main-bottom</position>
                <position>section2</position>
                <position>bottom-1</position>
                <position>bottom-2</position>
                <position>bottom-3</position>
                <position>footer-nav</position>
                <position>footer-social</position>
                <position>footer-extra-1</position>
                <position>footer-extra-2</position>
                <position>footer-extra-3</position>
                <position>footer-extra-4</position>
                <position>footer-copy-right</position>
                <position>breadcrumbs</position>
                <position>debug</position>
        </positions>
        <files>
                <folder>css</folder>
                <folder>html</folder>
                <folder>fonts</folder>
                <folder>images</folder>
                <folder>img</folder>
                <folder>js</folder>
                <folder>language</folder>
                <filename>component.php</filename>
                <filename>error.php</filename>
                <filename>favicon.ico</filename>
                <filename>favicon.png</filename>
                <filename>nextgweb-200x200.jpg</filename>
                <filename>index.php</filename>
                <filename>offline.php</filename>
                <filename>tools.php</filename>
                <filename>analyticstracking.php</filename>
                <filename>fbtracking.js</filename>
                <filename>template_preview.png</filename>
                <filename>template_thumbnail.png</filename>
                <filename>templateDetails.xml</filename>
        </files>

        <config>
                <fields name="params">
                        <fieldset name="advanced">
                                <field name="logo"
                                       class=""
                                       type="media"
                                       default=""
                                       label="TPL_KIWI_WEB_LOGO_LABEL"
                                       description="TPL_KIWI_WEB_LOGO_DESC"
                                />
                                <field name="logo_2"
                                       class=""
                                       type="media"
                                       default=""
                                       label="TPL_KIWI_WEB_LOGO_2_LABEL"
                                       description="TPL_KIWI_WEB_LOGO_2_DESC"
                                />

                                <field name="maxcdn_awesomefonts"
                                       type="radio"
                                       class="btn-group"
                                       default="0"
                                       label="TPL_KIWI_WEB_ENABLE_MAXCDN_AWESOMEFONTS_LABEL"
                                       description="TPL_KIWI_WEB_ENABLE_MAXCDN_AWESOMEFONTS_DESC"
                                       filter="intval"
                                >
                                        <option value="0">JNO</option>
                                        <option value="1">JYES</option>
                                </field>
                                <field name="maxcdn_bootstrap"
                                       type="radio"
                                       class="btn-group"
                                       default="0"
                                       label="TPL_KIWI_WEB_ENABLE_MAXCDN_BOOTSTRAP_LABEL"
                                       description="TPL_KIWI_WEB_ENABLE_MAXCDN_BOOTSTRAP_DESC"
                                       filter="intval"
                                >
                                        <option value="0">JNO</option>
                                        <option value="1">JYES</option>
                                </field>
                                <field name="enable_bootstraptheme"
                                       type="radio"
                                       class="btn-group"
                                       default="0"
                                       label="TPL_KIWI_WEB_ENABLE_MAXCDN_BOOTSTRAP_THEME_LABEL"
                                       description="TPL_KIWI_WEB_ENABLE_MAXCDN_BOOTSTRAP_THEME_DESC"
                                       filter="intval"
                                >
                                        <option value="0">JNO</option>
                                        <option value="1">JYES</option>
                                </field>
                        </fieldset>

                </fields>
        </config>
</extension>
