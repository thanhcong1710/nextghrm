<?xml version="1.0" encoding="utf-8"?>
<form>
        <fields name="filter">
                <field
                        name="search"
                        type="text"
                        label="COM_NEXTGCYBER_FILTER_SEARCH_DESC"
                        hint="JSEARCH_FILTER"
                />
                <field id="published"
                       name="published"
                       type="list"
                       label="JSTATUS"
                       description="JFIELD_PUBLISHED_DESC"
                       class="inputbox"
                       size="1"
                       onchange="this.form.submit();"
                       default=""
                >
                        <option value="">JSELECT</option>
                        <option value="TRUE">JPUBLISHED</option>
                        <option value="FALSE">JUNPUBLISHED</option>
                </field>
                
        </fields>
        <fields name="list">
                <field
                        name="fullordering"
                        type="list"
                        label="COM_NEXTGCYBER_LIST_FULL_ORDERING"
                        description="COM_NEXTGCYBER_LIST_FULL_ORDERING_DESC"
                        onchange="this.form.submit();"
                        default="id ASC"
                >
                        <option value="">JGLOBAL_SORT_BY</option>
                        <option value="id ASC">JGRID_HEADING_ID_ASC</option>
                        <option value="id DESC">JGRID_HEADING_ID_DESC</option>
                        <option value="name ASC">JGRID_HEADING_NAME_ASC</option>
                        <option value="name DESC">JGRID_HEADING_NAME_DESC</option>
                        
                </field>
                <field
                        name="limit"
                        type="limitbox"
                        class="inputbox input-mini"
                        default="25"
                        label="COM_NEXTGCYBER_LIST_LIMIT"
                        description="COM_NEXTGCYBER_LIST_LIMIT_DESC"
                        onchange="this.form.submit();"
                />
        </fields>
</form>