<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.3" client="site" method="upgrade">
        <name>NextgCyber Addons</name>
        <author>NextG-ERP</author>
        <authorUrl>http://nextgerp.com</authorUrl>
        <authorEmail>support@nextgerp.com</authorEmail>
        <creationDate>Sep 11, 2014</creationDate>
        <url>http://nextgerp.com/</url>
        <license>GNU/GPL version 2 or later; see LICENCE.txt</license>
        <copyright>Copyright (C) 2011-1014 NextG-ERP . All rights reserved.</copyright>
        <version>1.0.0</version>
        <description>Module to display NextgCyber Addons</description>
        <files>
                <folder>tmpl</folder>
                <folder>language</folder>
                <filename>mod_nextgcyber_addons.xml</filename>
                <filename module="mod_nextgcyber_addons">mod_nextgcyber_addons.php</filename>
                <filename>index.html</filename>
                <filename>helper.php</filename>
        </files>
        <config>
                <fields name="params">
                        <fieldset name="basic">
                                <field
                                        name="show_title"
                                        type="radio"
                                        default="1"
                                        class="btn-group btn-group-yesno"
                                        label="MOD_NEXTGCYBER_ADDONS_FIELDSET_BASIC_SHOW_TITLE_LABEL"
                                        description="MOD_NEXTGCYBER_ADDONS_FIELDSET_BASIC_SHOW_TITLE_DESC">
                                        <option value="1">JSHOW</option>
                                        <option value="0">JHIDE</option>
                                </field>
                        </fieldset>
                        <fieldset name="advanced">
                                <field
                                        name="layout"
                                        type="modulelayout"
                                        label="JFIELD_ALT_LAYOUT_LABEL"
                                        description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
                                <field
                                        name="moduleclass_sfx"
                                        type="textarea" rows="3"
                                        default=""
                                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
                        </fieldset>
                </fields>
        </config>
</extension>