<?xml version="1.0" encoding="utf-8"?>
<form>
        <fieldset addfieldpath="/administrator/components/com_nextgcyber/models/forms">
                <field
                        name="id"
                        type="hidden"
                />
                
                <field name="name"
                       type="text"
                       label="COM_NEXTGCYBER_TITLE_LABEL"
                       description="COM_NEXTGCYBER_TITLE_DESC"
                       size="40"
                       class="inputbox input-xxlarge"
                       hint="COM_NEXTGCYBER_TITLE_HINT"
                       readonly="true"
                />
                
                <field name="pricelist_id"
                       type="Pricelist"
                       label="COM_NEXTGCYBER_ORDER_PRICELIST_LABEL"
                       description="COM_NEXTGCYBER_ORDER_PRICELIST_DESC"
                       size="2"
                       class="inputbox input-xxlarge"
                />
                
                <field name="partner_id"
                       type="Partner"
                       label="COM_NEXTGCYBER_ORDER_PARTNER_LABEL"
                       description="COM_NEXTGCYBER_ORDER_PARTNER_DESC"
                       size="2"
                       class="inputbox input-xxlarge"
                       required="true"
                />
                
                <field name="create_date" type="calendar" label="JGLOBAL_FIELD_CREATED_LABEL"
                       description="JGLOBAL_FIELD_CREATED_DESC" size="22"
                       format="%Y-%m-%d %H:%M:%S" filter="user_utc" />

                <field name="active" type="list" label="JSTATUS"
                       description="JFIELD_PUBLISHED_DESC"
                       class="chzn-color-state"
                       size="1" default="1" filter="int"
                >
                        <option value="1">JPUBLISHED</option>
                        <option value="0">JUNPUBLISHED</option>
                </field>
        </fieldset>
</form>